<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvCountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Nama Negara"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                app:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:layout_gravity="center"
                    android:id="@+id/imgFlag"
                    android:src="@drawable/ic_country_mini"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txtcases"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/text_view_rounded"
                        android:backgroundTint="@color/cases"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        tools:text="Death"/>
                    <TextView
                        android:id="@+id/txttodaycases"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/text_view_rounded"
                        android:backgroundTint="@color/cases"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        tools:text="Death"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txtrecovered"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/text_view_rounded"
                        android:backgroundTint="@color/recovered"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        tools:text="Death"/>
                    <TextView
                        android:id="@+id/txttodayrecovered"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/text_view_rounded"
                        android:backgroundTint="@color/recovered"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        tools:text="Death"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txtdeath"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/text_view_rounded"
                        android:backgroundTint="@color/death"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        tools:text="Death"/>
                    <TextView
                        android:id="@+id/txttodaydeath"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/text_view_rounded"
                        android:backgroundTint="@color/death"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        tools:text="Death"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
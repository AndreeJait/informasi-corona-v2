<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvContinentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Continent Name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txtcases"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/text_view_rounded"
                    android:backgroundTint="@color/cases"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    tools:text="Death"/>
                <TextView
                    android:id="@+id/txttodaycases"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/text_view_rounded"
                    android:backgroundTint="@color/cases"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    tools:text="Death"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txtrecovered"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/text_view_rounded"
                    android:backgroundTint="@color/recovered"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    tools:text="Death"/>
                <TextView
                    android:id="@+id/txttodayrecovered"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/text_view_rounded"
                    android:backgroundTint="@color/recovered"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    tools:text="Death"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txtdeath"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/text_view_rounded"
                    android:backgroundTint="@color/death"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    tools:text="Death"/>
                <TextView
                    android:id="@+id/txttodaydeath"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/text_view_rounded"
                    android:backgroundTint="@color/death"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    tools:text="Death"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>